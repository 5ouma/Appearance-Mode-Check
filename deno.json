{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "fmt": { "exclude": ["LICENSE", ".github/**/*.md"] },
  "tasks": {
    "run": "deno run --allow-read='./public/' --allow-net='0.0.0.0'",
    "start": "deno task run ./src/server.ts",
    "dev": "deno task run --watch ./src/server.ts",
    "test": "deno test --allow-read='./public/' --allow-net='0.0.0.0' --parallel --shuffle",
    "cov": "deno task test --coverage && deno coverage --lcov > coverage.lcov"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@4.5.8",
    "@std/assert": "jsr:@std/assert@1.0.2",
    "@std/http": "jsr:@std/http@1.0.3"
  },
  "deploy": {
    "project": "appearance-mode",
    "include": ["./deno.json", "./src/", "./public/"],
    "entrypoint": "./src/server.ts"
  }
}
